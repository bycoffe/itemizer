<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Form type</th>
      <th>Entity Type</th>
      <th>Payee organization</th>
      <th>Payee name</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Purpose</th>
    </tr>
  </thead>
  <tbody>
  <% @itemizations.each do |item| %>
    <tr>
      <td id="<%= item[:transaction_id_number] %>"><a href="#<%= item[:transaction_id_number] %>">#</a></td>
      <td><%= item[:form_type] %></td>
      <td><%= item[:entity_type] %></td>
      <td><%= item[:payee_organization_name] %></td>
      <td><%= "#{item[:payee_last_name]}, #{item[:payee_first_name]} #{item[:payee_middle_name]}" if item[:payee_last_name] %></td>
      <td><%= item[:expenditure_date] %></td>
      <td><%= item[:expenditure_amount] %></td>
      <td><%= item[:expenditure_purpose_descrip] %></td>
    </tr>
  <% end %>
  </tbody>
</table>
